{
  "name": "humanode-hardhat",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "main": "index.js",
  "workspaces": [ "apps/web" ],
  "scripts": {
    "compile": "hardhat compile",
    "deploy:router": "hardhat run --network humanode scripts/deploy_router.js",
    "deploy:profile": "hardhat run --network humanode scripts/deploy_profile.js",
    "deploy:chat": "hardhat run --network humanode scripts/deploy_chat.js",
    "deploy:all": "pnpm run deploy:router && pnpm run deploy:profile && pnpm run deploy:chat",
    "sync:addresses": "node scripts/sync-addresses.js",
    "build:web": "pnpm --filter web build",
    "dev:web": "pnpm --filter web dev",
    "test": "hardhat test",
    "build": "pnpm -r build"
  },
  "keywords": [],
